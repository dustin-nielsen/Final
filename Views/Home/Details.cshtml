@{
    ViewData["Title"] = "Details";
}

@model Final.Models.Quote

<div class="text-center">
    <h1 class="display-4">More Information On Quote</h1>
</div>

<table class="table table-sm table-bordered table-striped">

    <tbody>
        <tr><th>Quote:</th><td>@Model.QuoteText</td></tr>
        <tr><th>Author:</th><td>@Model.Author</td></tr>
        <tr><th>Date:</th><td>@Model.Date</td></tr>
        <tr><th>Subject:</th><td>@Model.Subject</td></tr>
        <tr><th>Citation:</th><td>@Model.Citation</td></tr>
    </tbody>

</table>

<a class="btn btn-secondary"asp-controller="Home" asp-action="Index">Back</a>
<a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-quoteid="@Model.QuoteId">Edit</a>
<a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-quoteid="@Model.QuoteId">Delete</a>
